<h1> Players <%= link_to "+", new_player_path %></h1>

<% @players.each do |player| %>
<p> <%= link_to player.name, player_path(player) %> | <%= link_to 'edit', edit_player_path(player) %></p>
<p> Wins: <%= player.wins %> </p>
<p> Losses: <%= player.losses %> </p>

  <% player.decks.each do |deck| %>

  <p> Decks: </p>
    <ul>
      <li> <%= deck.name %></li>
    </ul>

    <% end %>
<% end %>
