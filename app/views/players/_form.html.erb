<%= form_for(@player, html: {class: 'form-horizontal'}) do |f|%>

<% if @player.errors.any? %>
  <div id="error_explanation">
      <h1>
        <%= pluralize(@player.errors.count, "error") %>
        stopped the player from being created.  Here's why:
      </h1>
        <% @player.errors.full_messages.each do |msg| %>
          <p> <%= msg %> </p>
        <% end %>
      </div>
    <% end %>

<div class="field form-group">
    <%= f.label :name, class: 'col-sm-1 control-label' %>
      <div class="col-sm-10">
    <%= f.text_field :name, class: 'form-control' %>
  </div>
</div>



<div class="field form-group">
  <%= f.label :wins, class: 'col-sm-1 control-label'%>
  <div class="col-sm-10">
  <%= f.text_field :wins, class: 'form-control' %>
  </div>
</div>


<div class="field form-group">
  <%= f.label :losses, class: 'col-sm-1 control-label' %>
<div class="col-sm-10">
  <%= f.text_field :losses, class: 'form-control' %>
</div>
</div>


  <div class="actions form-group">
    <div class="col-sm-10">
      <%= f.submit %>
    </div>
  </div>

<% end %>
